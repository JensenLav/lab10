<%- include ('../partials/header') %>


    <% if (locals.message) { %>
        <div
        class="alert alert-<%- locals.incorrect? 'danger' : 'success' %>"
        role="alert"
        >
        <%= message %>
        </div>
        <% } %>




<main>

    <section class="h-100 gradient-form" style="background-color: rgb(167, 198, 227);">
        <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row g-0">
                <div class="col-lg-6">
                    <div class="card-body p-md-5 mx-md-4">
    
                    <div class="text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                        style="width: 185px;" alt="logo">
                        <h4 class="mt-1 mb-5 pb-1">Food Finder</h4>
                    </div>
    
                    <form action = "/login" method = "POST">
                        <p>Please login to your account</p>
    
                        <div class="form-outline mb-4">
                        <input name ="username" type="username" id="username" class="form-control" placeholder="username" />
                        <label class="username" for="username">Username</label>
                        </div>
    
                        <div class="form-outline mb-4">
                        <input name ="password" type="password" id="password" class="form-control" />
                        <label class="password" for="password">Password</label>
                        </div>
    
                        <div class="text-center pt-1 mb-5 pb-1">
                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Login</button>
                        <a class="text-muted" href="#!">Forgot password?</a>
                        </div>

                        <!-- <div class="text-center">
                            <p>or Login with:</p>
                        <button type="button" class="btn btn-link btn-floating mx-1">
                            <i class="fab fa-google"></i>
                        </button>
    
                        <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-github"></i> -->
    
                        <div class="d-flex align-items-center justify-content-center pb-4">
                        <p class="mb-0 me-2">Don't have an account?</p> 
                        <a href="/register" class="fw-bold text-body">
                        <button type="button" class="btn btn-outline-danger">Create new</a></button>
                        </div>
    
                    </form>
    
                    </div>
                </div>
                <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                    <div class="text-black px-3 py-4 p-md-5 mx-md-4">
                    <h4 class="mb-4">We are more than just a company</h4>
                    <p class="small mb-0">Our company puts you first! trying to find a good restaurants 
                        can be hard but with Food Finder we take the stress out of finding a good restaurants.
                        You get to add your own input on good or bad restaurants that you have been to. We use an interactive 
                        map so you can see where you and others have rated restaurants near you. Perfect for trying new local places
                        or planning a trip.

                    </p>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </section>

</main>
    

<%- include ('../partials/footer') %>